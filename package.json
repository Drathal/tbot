{
  "name": "tbot",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "start": "electron .",
    "test": "ava",
    "coverage": "nyc --all ava",
    "test:watch": "npm run test -- --watch --verbose"
  },
  "author": "Markus Dethlefsen <code@markus-dethlefsen.de>",
  "license": "MIT",
  "dependencies": {
    "config": "^1.21.0",
    "electron": "^1.4.4",
    "hooker": "^0.2.3",
    "irc-framework": "^2.5.0",
    "lodash": "^4.16.4",
    "mustache": "^2.2.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.6",
    "redux": "^3.6.0",
    "sinon": "^2.0.0-pre.3",
    "tmi.js": "^1.1.2"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "ava-spec": "^1.0.1",
    "babel-plugin-istanbul": "^2.0.3",
    "babel-preset-es2016": "^6.16.0",
    "babel-preset-es2016-node5": "^1.1.2",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "electron-prebuilt-compile": "^1.4.4",
    "eslint": "^3.8.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-react": "^6.4.1",
    "eslint-plugin-standard": "^2.0.1",
    "mock-require": "^2.0.0",
    "mock-socket": "^5.0.1",
    "nyc": "^8.3.2",
    "pretty-error": "^2.0.2",
    "rewire": "^2.5.2",
    "sinon": "^2.0.0-pre.3",
    "testdouble": "^1.9.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  },
  "ava": {
    "files": [
      "lib/**/*.{test,spec}.js"
    ],
    "source": [
      "lib/**/*.js"
    ],
    "match": [],
    "concurrency": 5,
    "failFast": true,
    "require": [
      "babel-register",
      "babel-polyfill",
      "./test/helper.js"
    ],
    "tap": false,
    "powerAssert": true
  },
  "nyc": {
    "include": "lib/**/*.js",
    "exclude": [
      "lib/**/*.test.js",
      "lib/**/*.spec.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "report-dir": "./coverage",
    "all": true,
    "sourceMap": false,
    "instrument": false
  }
}
